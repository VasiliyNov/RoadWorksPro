@* Hero Section with Slider *@
<section class="relative">
    <div class="swiper heroSwiper h-[500px] md:h-[600px]">
        <div class="swiper-wrapper">
            @* Slide 1 *@
            <div class="swiper-slide relative">
                <div class="absolute inset-0 hero-gradient opacity-90"></div>
                <div class="absolute inset-0 flex items-center justify-center">
                    <div class="text-center text-white px-4 max-w-4xl">
                        <h1 class="text-4xl md:text-6xl font-bold mb-4">Професійні дорожні роботи</h1>
                        <p class="text-xl md:text-2xl mb-8 opacity-90">Якість, якій довіряють</p>
                        <a href="/Services" class="inline-block bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-8 rounded-lg text-lg transition transform hover:scale-105">
                            Наші послуги
                        </a>
                    </div>
                </div>
            </div>
            @* Slide 2 *@
            <div class="swiper-slide relative">
                <div class="absolute inset-0 bg-gradient-to-r from-blue-900 to-blue-700 opacity-90"></div>
                <div class="absolute inset-0 flex items-center justify-center">
                    <div class="text-center text-white px-4 max-w-4xl">
                        <h1 class="text-4xl md:text-6xl font-bold mb-4">Дорожня розмітка будь-якої складності</h1>
                        <p class="text-xl md:text-2xl mb-8 opacity-90">Сучасне обладнання та матеріали</p>
                        <a href="/Products" class="inline-block bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-8 rounded-lg text-lg transition transform hover:scale-105">
                            Дивитися каталог
                        </a>
                    </div>
                </div>
            </div>
            @* Slide 3 *@
            <div class="swiper-slide relative">
                <div class="absolute inset-0 bg-gradient-to-r from-gray-900 to-gray-700 opacity-90"></div>
                <div class="absolute inset-0 flex items-center justify-center">
                    <div class="text-center text-white px-4 max-w-4xl">
                        <h1 class="text-4xl md:text-6xl font-bold mb-4">Дорожні знаки та обладнання</h1>
