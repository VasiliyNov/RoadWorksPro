@* Services from DB *@
@if (Model.Services.Any())
{
    <section class="py-20 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Наші послуги</h2>
                <p class="text-xl text-gray-600">Повний спектр дорожніх робіт</p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                @foreach (var service in Model.Services)
                {
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden card-hover">
                        <div class="h-48 relative overflow-hidden">
                            @if (!string.IsNullOrEmpty(service.ImagePath))
                            {
                                <img src="@service.ImagePath"
                                     alt="@service.Name"
                                     class="w-full h-full object-cover">
                            }
                            else
                            {
                                <div class="w-full h-full bg-gradient-to-br from-blue-500 to-blue-700 flex items-center justify-center">
                                    <svg class="h-20 w-20 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                                    </svg>
                                </div>
                            }
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-bold mb-2">@service.Name</h3>
                            <p class="text-gray-600 mb-4">@service.Description?.Substring(0, Math.Min(service.Description.Length, 100))...</p>
                            @if (!string.IsNullOrEmpty(service.PriceInfo))
                            {
                                <p class="text-blue-600 font-semibold mb-4">@service.PriceInfo</p>
                            }
                            <a href="/Services/Details/@service.Id" class="text-blue-700 hover:text-blue-800 font-medium">
                                Детальніше →
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

