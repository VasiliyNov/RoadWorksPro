@model RoadWorksPro.Models.Entities.RoadService
@{
    ViewData["Title"] = "Видалення послуги";
    Layout = "_AdminLayout";
}

<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow p-6">
        <div class="mb-6">
            <h2 class="text-2xl font-bold text-red-600 mb-2">Видалення послуги</h2>
            <p class="text-gray-600">Ви впевнені, що хочете видалити цю послугу? Цю дію неможливо відмінити.</p>
        </div>

        <div class="bg-gray-50 rounded-lg p-4 mb-6">
            <h3 class="font-semibold mb-3">Інформація про послугу:</h3>

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="mb-4">
                    <img src="@Model.ImagePath" alt="@Model.Name" class="h-32 w-auto object-cover rounded-lg shadow">
                </div>
            }

            <dl class="space-y-2">
                <div class="flex justify-between">
                    <dt class="text-gray-500">Назва:</dt>
                    <dd class="font-semibold">@Model.Name</dd>
                </div>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div>
                        <dt class="text-gray-500 mb-1">Опис:</dt>
                        <dd class="text-sm">@Model.Description</dd>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.PriceInfo))
                {
                    <div class="flex justify-between">
                        <dt class="text-gray-500">Ціна:</dt>
                        <dd>@Model.PriceInfo</dd>
                    </div>
                }
                <div class="flex justify-between">
                    <dt class="text-gray-500">Статус:</dt>
                    <dd>
                        @if (Model.IsActive)
                        {
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                Активна
                            </span>
                        }
                        else
                        {
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                Неактивна
                            </span>
                        }
                    </dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-gray-500">Додано:</dt>
                    <dd>@Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</dd>
                </div>
            </dl>
        </div>

        <div class="flex justify-between">
            <a href="/Admin/Services" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-6 rounded-lg transition">
                Скасувати
            </a>

            <form method="post" action="/Admin/Services/Delete/@Model.Id">
                @Html.AntiForgeryToken()
                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-6 rounded-lg transition">
                    Видалити послугу
                </button>
            </form>
        </div>
    </div>
</div>