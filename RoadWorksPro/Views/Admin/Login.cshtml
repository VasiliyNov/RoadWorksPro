@model RoadWorksPro.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Вхід в адмін панель";
    Layout = null;
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - РоадПро</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100">
    <div class="min-h-screen flex items-center justify-center">
        <div class="max-w-md w-full space-y-8 p-8 bg-white rounded-lg shadow-lg">
            <div>
                <h2 class="text-center text-3xl font-extrabold text-gray-900">
                    Вхід в адмін панель
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    РоадПро - Система управління
                </p>
            </div>

            <form class="mt-8 space-y-6" asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-red-500 text-sm"></div>

                <div class="space-y-4">
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                        <input asp-for="Email"
                               type="email"
                               required
                               class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="admin@roadpro.ua">
                        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Password" class="block text-sm font-medium text-gray-700">Пароль</label>
                        <input asp-for="Password"
                               type="password"
                               required
                               class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="••••••••">
                        <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="flex items-center">
                        <input asp-for="RememberMe"
                               type="checkbox"
                               class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                        <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-900">
                            Запам'ятати мене
                        </label>
                    </div>
                </div>

                <button type="submit"
                        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200">
                    Увійти
                </button>
            </form>

            <div class="text-center text-sm text-gray-600">
                <a href="/" class="hover:text-blue-600 transition">← Повернутися на сайт</a>
            </div>

            @if (ViewBag.ShowTestCredentials == true || true)
            {
                <div class="mt-4 p-4 bg-blue-50 rounded-lg">
                    <p class="text-sm text-blue-800">
                        <strong>Тестові дані для входу:</strong><br>
                        Email: admin@roadpro.ua<br>
                        Пароль: Admin123!
                    </p>
                </div>
            }
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>