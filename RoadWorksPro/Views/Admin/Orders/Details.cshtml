@model RoadWorksPro.Models.Entities.RoadOrder
@{
    ViewData["Title"] = $"Замовлення #{Model.Id}";
    Layout = "_AdminLayout";
}

@if (TempData["Success"] != null)
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
        <span class="block sm:inline">@TempData["Success"]</span>
    </div>
}

<div class="mb-6">
    <a href="/Admin/Orders" class="text-blue-600 hover:text-blue-800">← Повернутися до списку</a>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    @* Order Info *@
    <div class="lg:col-span-2 space-y-6">
        @* Order Details *@
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-semibold mb-4">Деталі замовлення</h2>
            
            <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                    <dt class="text-sm font-medium text-gray-500">Номер замовлення</dt>
                    <dd class="mt-1 text-sm text-gray-900 font-semibold">#@Model.Id</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Дата створення</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Статус</dt>
                    <dd class="mt-1">
                        @{
                            var statusClass = Model.Status switch
                            {
                                RoadWorksPro.Models.Enums.OrderStatus.New => "bg-yellow-100 text-yellow-800",
                                RoadWorksPro.Models.Enums.OrderStatus.InProgress => "bg-blue-100 text-blue-800",
                                RoadWorksPro.Models.Enums.OrderStatus.Completed => "bg-green-100 text-green-800",
                                RoadWorksPro.Models.Enums.OrderStatus.Cancelled => "bg-red-100 text-red-800",
                                _ => "bg-gray-100 text-gray-800"
                            };
                            var statusText = Model.Status switch
                            {
                                RoadWorksPro.Models.Enums.OrderStatus.New => "Нове",
                                RoadWorksPro.Models.Enums.OrderStatus.InProgress => "В роботі",
                                RoadWorksPro.Models.Enums.OrderStatus.Completed => "Виконано",
                                RoadWorksPro.Models.Enums.OrderStatus.Cancelled => "Скасовано",
                                _ => "Невідомо"
                            };
                        }
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @statusClass">
                            @statusText
                        </span>
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Сума замовлення</dt>
                    <dd class="mt-1 text-xl font-bold text-blue-600">₴ @Model.TotalAmount.ToString("N2")</dd>
                </div>
            </dl>
        </div>

        @* Customer Info *@
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-semibold mb-4">Інформація про клієнта</h2>
            
            <dl class="space-y-3">
                <div>
                    <dt class="text-sm font-medium text-gray-500">Ім'я</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.CustomerName</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Телефон</dt>
                    <dd class="mt-1 text-sm text-gray-900">
                        <a href="tel:@Model.CustomerPhone" class="text-blue-600 hover:text-blue-800">@Model.CustomerPhone</a>
                    </dd>
                </div>
                @if (!string.IsNullOrEmpty(Model.CustomerEmail))
                {
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Email</dt>
                        <dd class="mt-1 text-sm text-gray-900">
                            <a href="mailto:@Model.CustomerEmail" class="text-blue-600 hover:text-blue-800">@Model.CustomerEmail</a>
                        </dd>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Comment))
                {
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Коментар</dt>
                        <dd class="mt-1 text-sm text-gray-900 bg-gray-50 p-3 rounded">@Model.Comment</dd>
                    </div>
                }
            </dl>
        </div>

        @* Order Items *@
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b">
                <h2 class="text-xl font-semibold">Товари в замовленні</h2>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Товар</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ціна</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Кількість</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Сума</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td class="px-6 py-4">
                                    <div class="text-sm font-medium text-gray-900">@item.Product.Name</div>
                                    <div class="text-sm text-gray-500">@item.Product.Dimensions</div>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-900">₴ @item.Price.ToString("N2")</td>
                                <td class="px-6 py-4 text-sm text-gray-900">@item.Quantity</td>
                                <td class="px-6 py-4 text-sm font-semibold text-gray-900">₴ @item.Total.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="bg-gray-50">
                        <tr>
                            <td colspan="3" class="px-6 py-4 text-right font-semibold">Всього:</td>
                            <td class="px-6 py-4 text-lg font-bold text-blue-600">₴ @Model.TotalAmount.ToString("N2")</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    @* Actions Sidebar *@
    <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow p-6 sticky top-6">
            <h3 class="text-lg font-semibold mb-4">Дії</h3>
            
            @* Update Status *@
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Змінити статус</label>
                <form method="post" action="/Admin/Orders/UpdateStatus/@Model.Id">
                    @Html.AntiForgeryToken()
                    <select name="status" class="w-full border-gray-300 rounded-md shadow-sm mb-2">
                        <option value="0" selected="@(Model.Status == RoadWorksPro.Models.Enums.OrderStatus.New ? "selected" : null)">Нове</option>
                        <option value="1" selected="@(Model.Status == RoadWorksPro.Models.Enums.OrderStatus.InProgress ? "selected" : null)">В роботі</option>
                        <option value="2" selected="@(Model.Status == RoadWorksPro.Models.Enums.OrderStatus.Completed ? "selected" : null)">Виконано</option>
                        <option value="3" selected="@(Model.Status == RoadWorksPro.Models.Enums.OrderStatus.Cancelled ? "selected" : null)">Скасовано</option>
                    </select>
                    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition">
                        Оновити статус
                    </button>
                </form>
            </div>
            
            @* Quick Actions *@
            <div class="space-y-2">
                <a href="tel:@Model.CustomerPhone" class="block w-full bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded text-center transition">
                    📞 Подзвонити клієнту
                </a>
                
                @if (!string.IsNullOrEmpty(Model.CustomerEmail))
                {
                    <a href="mailto:@Model.CustomerEmail" class="block w-full bg-purple-500 hover:bg-purple-600 text-white font-bold py-2 px-4 rounded text-center transition">
                        ✉️ Написати email
                    </a>
                }
                
                <a href="/Admin/Orders/Delete/@Model.Id" class="block w-full bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded text-center transition">
                    🗑️ Видалити замовлення
                </a>
            </div>
        </div>
    </div>
</div>