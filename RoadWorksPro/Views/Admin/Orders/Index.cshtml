@model List<RoadWorksPro.Models.Entities.RoadOrder>
@{
    ViewData["Title"] = "Управління замовленнями";
    Layout = "_AdminLayout";
    var statusCounts = ViewBag.StatusCounts;
    var currentStatus = ViewBag.CurrentStatus as RoadWorksPro.Models.Enums.OrderStatus?;
}

@* Success/Error messages *@
@if (TempData["Success"] != null)
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
        <span class="block sm:inline">@TempData["Success"]</span>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <span class="block sm:inline">@TempData["Error"]</span>
    </div>
}

@* Status Filter Tabs *@
<div class="bg-white rounded-lg shadow mb-6">
    <div class="border-b border-gray-200">
        <nav class="flex space-x-8 px-6" aria-label="Tabs">
            <a href="/Admin/Orders"
               class="@(currentStatus == null ? "border-blue-500 text-blue-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                Всі
                <span class="ml-2 bg-gray-100 text-gray-900 py-0.5 px-2.5 rounded-full text-xs">@statusCounts.All</span>
            </a>
            <a href="/Admin/Orders?status=New"
               class="@(currentStatus == RoadWorksPro.Models.Enums.OrderStatus.New ? "border-blue-500 text-blue-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                Нові
                <span class="ml-2 bg-yellow-100 text-yellow-900 py-0.5 px-2.5 rounded-full text-xs">@statusCounts.New</span>
            </a>
            <a href="/Admin/Orders?status=InProgress"
               class="@(currentStatus == RoadWorksPro.Models.Enums.OrderStatus.InProgress ? "border-blue-500 text-blue-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                В роботі
                <span class="ml-2 bg-blue-100 text-blue-900 py-0.5 px-2.5 rounded-full text-xs">@statusCounts.InProgress</span>
            </a>
            <a href="/Admin/Orders?status=Completed"
               class="@(currentStatus == RoadWorksPro.Models.Enums.OrderStatus.Completed ? "border-blue-500 text-blue-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                Виконані
                <span class="ml-2 bg-green-100 text-green-900 py-0.5 px-2.5 rounded-full text-xs">@statusCounts.Completed</span>
            </a>
            <a href="/Admin/Orders?status=Cancelled"
               class="@(currentStatus == RoadWorksPro.Models.Enums.OrderStatus.Cancelled ? "border-blue-500 text-blue-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                Скасовані
                <span class="ml-2 bg-red-100 text-red-900 py-0.5 px-2.5 rounded-full text-xs">@statusCounts.Cancelled</span>
            </a>
        </nav>
    </div>
</div>

@* Orders Table *@
<div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Клієнт</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Контакти</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Товарів</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Сума</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Статус</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Дата</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Дії</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var order in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            #@order.Id
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">@order.CustomerName</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">@order.CustomerPhone</div>
                            @if (!string.IsNullOrEmpty(order.CustomerEmail))
                            {
                                <div class="text-sm text-gray-500">@order.CustomerEmail</div>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            @order.OrderItems.Sum(i => i.Quantity) шт.
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                            ₴ @order.TotalAmount.ToString("N2")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            @{
                                var statusClass = order.Status switch
                                {
                                    RoadWorksPro.Models.Enums.OrderStatus.New => "bg-yellow-100 text-yellow-800",
                                    RoadWorksPro.Models.Enums.OrderStatus.InProgress => "bg-blue-100 text-blue-800",
                                    RoadWorksPro.Models.Enums.OrderStatus.Completed => "bg-green-100 text-green-800",
                                    RoadWorksPro.Models.Enums.OrderStatus.Cancelled => "bg-red-100 text-red-800",
                                    _ => "bg-gray-100 text-gray-800"
                                };
                                var statusText = order.Status switch
                                {
                                    RoadWorksPro.Models.Enums.OrderStatus.New => "Нове",
                                    RoadWorksPro.Models.Enums.OrderStatus.InProgress => "В роботі",
                                    RoadWorksPro.Models.Enums.OrderStatus.Completed => "Виконано",
                                    RoadWorksPro.Models.Enums.OrderStatus.Cancelled => "Скасовано",
                                    _ => "Невідомо"
                                };
                            }
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @statusClass">
                                @statusText
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @order.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <a href="/Admin/Orders/Details/@order.Id" class="text-blue-600 hover:text-blue-900 mr-3">
                                Детальніше
                            </a>
                            <a href="/Admin/Orders/Delete/@order.Id" class="text-red-600 hover:text-red-900">
                                Видалити
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">Немає замовлень</h3>
            <p class="mt-1 text-sm text-gray-500">Замовлення з'являться тут після оформлення на сайті.</p>
        </div>
    }
</div>