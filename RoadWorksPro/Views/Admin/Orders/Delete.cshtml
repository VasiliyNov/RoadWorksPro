@model RoadWorksPro.Models.Entities.RoadOrder
@{
    ViewData["Title"] = "Видалення замовлення";
    Layout = "_AdminLayout";
}

<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow p-6">
        <div class="mb-6">
            <h2 class="text-2xl font-bold text-red-600 mb-2">Видалення замовлення</h2>
            <p class="text-gray-600">Ви впевнені, що хочете видалити це замовлення? Цю дію неможливо відмінити.</p>
        </div>

        <div class="bg-gray-50 rounded-lg p-4 mb-6">
            <h3 class="font-semibold mb-3">Деталі замовлення:</h3>
            <dl class="space-y-2">
                <div class="flex justify-between">
                    <dt class="text-gray-500">Номер:</dt>
                    <dd class="font-semibold">#@Model.Id</dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-gray-500">Клієнт:</dt>
                    <dd>@Model.CustomerName</dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-gray-500">Сума:</dt>
                    <dd>₴ @Model.TotalAmount.ToString("N2")</dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-gray-500">Дата:</dt>
                    <dd>@Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</dd>
                </div>
            </dl>
        </div>

        <div class="flex justify-between">
            <a href="/Admin/Orders/Details/@Model.Id" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-6 rounded transition">
                Скасувати
            </a>

            <form method="post" action="/Admin/Orders/Delete/@Model.Id">
                @Html.AntiForgeryToken()
                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-6 rounded transition">
                    Видалити замовлення
                </button>
            </form>
        </div>
    </div>
</div>