@model RoadWorksPro.Models.Entities.RoadClient
@{
    ViewData["Title"] = "Редагування клієнта";
    Layout = "_AdminLayout";
}

<div class="max-w-2xl">
    <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-2xl font-bold mb-6">Редагування клієнта</h2>

        <form method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Назва компанії *</label>
                <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded-lg" required>
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Поточний логотип</label>
                @if (!string.IsNullOrEmpty(Model.LogoPath))
                {
                    <div class="mb-2">
                        <img src="@Model.LogoPath" alt="@Model.Name" class="h-20 w-auto">
                    </div>
                }
                <label class="block text-sm font-medium text-gray-700 mb-2">Новий логотип (залиште порожнім, щоб зберегти поточний)</label>
                <input type="file" name="logo" accept="image/*" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
                <p class="text-xs text-gray-500 mt-1">Рекомендований розмір: 200x100px, формат: PNG з прозорим фоном</p>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Веб-сайт</label>
                <input asp-for="WebsiteUrl" placeholder="https://example.com" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Порядок відображення</label>
                <input asp-for="DisplayOrder" type="number" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
            </div>

            <div class="mb-6">
                <label class="flex items-center">
                    <input asp-for="IsActive" type="checkbox" class="mr-2">
                    <span class="text-sm">Активний</span>
                </label>
            </div>

            <div class="flex gap-4">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Зберегти зміни
                </button>
                <a href="/Admin/Clients" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded">
                    Скасувати
                </a>
            </div>
        </form>
    </div>
</div>