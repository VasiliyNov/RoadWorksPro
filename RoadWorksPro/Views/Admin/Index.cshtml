@model RoadWorksPro.Models.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Дашборд";
    Layout = "_AdminLayout";
}

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    @* New Orders Card *@
    <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-500 mb-1">Нові замовлення</p>
                <p class="text-2xl font-bold text-gray-900">@Model.NewOrders</p>
            </div>
            <div class="bg-orange-100 rounded-full p-3">
                <svg class="h-6 w-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>
    
    @* Total Orders Card *@
    <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-500 mb-1">Всього замовлень</p>
                <p class="text-2xl font-bold text-gray-900">@Model.TotalOrders</p>
            </div>
            <div class="bg-blue-100 rounded-full p-3">
                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
            </div>
        </div>
    </div>
    
    @* Products Card *@
    <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-500 mb-1">Товарів</p>
                <p class="text-2xl font-bold text-gray-900">@Model.TotalProducts</p>
            </div>
            <div class="bg-green-100 rounded-full p-3">
                <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                </svg>
            </div>
        </div>
    </div>
    
    @* Services Card *@
    <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-500 mb-1">Послуг</p>
                <p class="text-2xl font-bold text-gray-900">@Model.TotalServices</p>
            </div>
            <div class="bg-purple-100 rounded-full p-3">
                <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                </svg>
            </div>
        </div>
    </div>
</div>

@* Recent Orders *@
<div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b">
        <h2 class="text-xl font-semibold text-gray-900">Останні замовлення</h2>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Клієнт</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Телефон</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Сума</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Статус</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Дата</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Дії</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var order in Model.RecentOrders)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#@order.Id</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@order.CustomerName</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@order.CustomerPhone</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">₴ @order.TotalAmount.ToString("N2")</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            @{
                                var statusClass = order.Status switch
                                {
                                    RoadWorksPro.Models.Enums.OrderStatus.New => "bg-yellow-100 text-yellow-800",
                                    RoadWorksPro.Models.Enums.OrderStatus.InProgress => "bg-blue-100 text-blue-800",
                                    RoadWorksPro.Models.Enums.OrderStatus.Completed => "bg-green-100 text-green-800",
                                    RoadWorksPro.Models.Enums.OrderStatus.Cancelled => "bg-red-100 text-red-800",
                                    _ => "bg-gray-100 text-gray-800"
                                };
                                var statusText = order.Status switch
                                {
                                    RoadWorksPro.Models.Enums.OrderStatus.New => "Нове",
                                    RoadWorksPro.Models.Enums.OrderStatus.InProgress => "В роботі",
                                    RoadWorksPro.Models.Enums.OrderStatus.Completed => "Виконано",
                                    RoadWorksPro.Models.Enums.OrderStatus.Cancelled => "Скасовано",
                                    _ => "Невідомо"
                                };
                            }
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @statusClass">
                                @statusText
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @order.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <a href="/Admin/Orders/Details/@order.Id" class="text-blue-600 hover:text-blue-900">Детальніше</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (!Model.RecentOrders.Any())
    {
        <div class="text-center py-8">
            <p class="text-gray-500">Замовлень поки немає</p>
        </div>
    }
    else
    {
        <div class="px-6 py-4 border-t">
            <a href="/Admin/Orders" class="text-blue-600 hover:text-blue-800 font-medium">Переглянути всі замовлення →</a>
        </div>
    }
</div>

@* Quick Actions *@
