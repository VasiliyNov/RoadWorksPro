@model RoadWorksPro.Models.Entities.RoadProduct
@{
    ViewData["Title"] = "Видалення товару";
    Layout = "_AdminLayout";
}

<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow p-6">
        <div class="mb-6">
            <h2 class="text-2xl font-bold text-red-600 mb-2">Видалення товару</h2>
            <p class="text-gray-600">Ви впевнені, що хочете видалити цей товар? Цю дію неможливо відмінити.</p>
        </div>

        <div class="bg-gray-50 rounded-lg p-4 mb-6">
            <h3 class="font-semibold mb-3">Інформація про товар:</h3>

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="mb-4">
                    <img src="@Model.ImagePath" alt="@Model.Name" class="h-32 w-32 object-cover rounded-lg shadow">
                </div>
            }

            <dl class="space-y-2">
                <div class="flex justify-between">
                    <dt class="text-gray-500">Назва:</dt>
                    <dd class="font-semibold">@Model.Name</dd>
                </div>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div>
                        <dt class="text-gray-500 mb-1">Опис:</dt>
                        <dd class="text-sm">@Model.Description</dd>
                    </div>
                }
                <div class="flex justify-between">
                    <dt class="text-gray-500">Ціна:</dt>
                    <dd>₴ @Model.Price.ToString("N2")</dd>
                </div>
                @if (!string.IsNullOrEmpty(Model.Dimensions))
                {
                    <div class="flex justify-between">
                        <dt class="text-gray-500">Розміри:</dt>
                        <dd>@Model.Dimensions</dd>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Material))
                {
                    <div class="flex justify-between">
                        <dt class="text-gray-500">Матеріал:</dt>
                        <dd>@Model.Material</dd>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Standard))
                {
                    <div class="flex justify-between">
                        <dt class="text-gray-500">Стандарт:</dt>
                        <dd>@Model.Standard</dd>
                    </div>
                }
                <div class="flex justify-between">
                    <dt class="text-gray-500">Статус:</dt>
                    <dd>
                        @if (Model.IsActive)
                        {
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                Активний
                            </span>
                        }
                        else
                        {
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                Неактивний
                            </span>
                        }
                    </dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-gray-500">Додано:</dt>
                    <dd>@Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</dd>
                </div>
            </dl>
        </div>

        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
            <div class="flex">
                <svg class="h-5 w-5 text-yellow-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <div class="text-sm text-yellow-800">
                    <strong>Увага!</strong> Видалення товару також видалить його зображення та вплине на статистику продажів.
                </div>
            </div>
        </div>

        <div class="flex justify-between">
            <a href="/Admin/Products" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-6 rounded-lg transition">
                Скасувати
            </a>

            <form method="post" action="/Admin/Products/Delete/@Model.Id">
                @Html.AntiForgeryToken()
                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-6 rounded-lg transition">
                    Видалити товар
                </button>
            </form>
        </div>
    </div>
</div>