@model RoadWorksPro.Models.ViewModels.PortfolioCreateViewModel
@{
    ViewData["Title"] = "Додати роботу в портфоліо";
    Layout = "_AdminLayout";
}

<div class="mb-6">
    <a href="/Admin/Portfolio" class="text-blue-600 hover:text-blue-800">← Повернутися до списку</a>
</div>

<div class="max-w-4xl">
    <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-2xl font-bold mb-6">Нова робота в портфоліо</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                @* Title *@
                <div class="md:col-span-2">
                    <label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-1">
                        Назва проекту <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="Title"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
                </div>

                @* Category *@
                <div>
                    <label asp-for="Category" class="block text-sm font-medium text-gray-700 mb-1">
                        Категорія <span class="text-red-500">*</span>
                    </label>
                    <select asp-for="Category"
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="road-marking">Дорожня розмітка</option>
                        <option value="equipment">Монтаж дорожнього обладнання</option>
                        <option value="other">Інше</option>
                    </select>
                    <span asp-validation-for="Category" class="text-red-500 text-sm"></span>
                </div>

                @* Location *@
                <div>
                    <label asp-for="Location" class="block text-sm font-medium text-gray-700 mb-1">
                        Локація
                    </label>
                    <input asp-for="Location"
                           placeholder="наприклад: м. Дніпро"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <span asp-validation-for="Location" class="text-red-500 text-sm"></span>
                </div>

                @* Work Volume *@
                <div>
                    <label asp-for="WorkVolume" class="block text-sm font-medium text-gray-700 mb-1">
                        Обсяг робіт
                    </label>
                    <input asp-for="WorkVolume"
                           placeholder="наприклад: 1500 м²"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <span asp-validation-for="WorkVolume" class="text-red-500 text-sm"></span>
                </div>

                @* Materials *@
                <div>
                    <label asp-for="Materials" class="block text-sm font-medium text-gray-700 mb-1">
                        Матеріали
                    </label>
                    <input asp-for="Materials"
                           placeholder="наприклад: Термопластик"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <span asp-validation-for="Materials" class="text-red-500 text-sm"></span>
                </div>

                @* Completed Date *@
                <div>
                    <label asp-for="CompletedDate" class="block text-sm font-medium text-gray-700 mb-1">
                        Дата виконання
                    </label>
                    <input asp-for="CompletedDate"
                           type="date"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <span asp-validation-for="CompletedDate" class="text-red-500 text-sm"></span>
                </div>

                @* Display Size *@
                <div>
                    <label asp-for="DisplaySize" class="block text-sm font-medium text-gray-700 mb-1">
                        Розмір картки
                    </label>
                    <select asp-for="DisplaySize"
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="0">Звичайний (1x1)</option>
                        <option value="1">Широкий (2x1)</option>
                        <option value="2">Високий (1x2)</option>
                        <option value="3">Великий (2x2)</option>
                    </select>
                </div>

                @* Display Order *@
                <div>
                    <label asp-for="DisplayOrder" class="block text-sm font-medium text-gray-700 mb-1">
                        Порядок відображення
                    </label>
                    <input asp-for="DisplayOrder"
                           type="number"
                           value="0"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <span asp-validation-for="DisplayOrder" class="text-red-500 text-sm"></span>
                </div>

                @* Description *@
                <div class="md:col-span-2">
                    <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1">
                        Опис проекту
                    </label>
                    <textarea asp-for="Description"
                              rows="4"
                              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                </div>

                @* Main Image *@
                <div class="md:col-span-2">
                    <label asp-for="MainImageFile" class="block text-sm font-medium text-gray-700 mb-1">
                        Головне зображення <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="MainImageFile"
                           type="file"
                           accept="image/*"
                           required
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <span asp-validation-for="MainImageFile" class="text-red-500 text-sm"></span>
                    <p class="text-xs text-gray-500 mt-1">Рекомендований розмір: 1200x800 px</p>
                </div>

                @* Additional Images *@
                <div class="md:col-span-2">
                    <label asp-for="AdditionalImageFiles" class="block text-sm font-medium text-gray-700 mb-1">
                        Додаткові зображення
                    </label>
                    <input asp-for="AdditionalImageFiles"
                           type="file"
                           accept="image/*"
                           multiple
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <p class="text-xs text-gray-500 mt-1">Можна вибрати кілька файлів одночасно</p>
                </div>

                @* Checkboxes *@
                <div>
                    <label class="flex items-center">
                        <input asp-for="IsFeatured" type="checkbox" class="mr-2">
                        <span class="text-sm font-medium text-gray-700">Рекомендована робота</span>
                    </label>
                </div>

                <div>
                    <label class="flex items-center">
                        <input asp-for="IsActive" type="checkbox" checked class="mr-2">
                        <span class="text-sm font-medium text-gray-700">Активна (відображається на сайті)</span>
                    </label>
                </div>
            </div>

            <div class="mt-6 flex justify-end space-x-3">
                <a href="/Admin/Portfolio" class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition">
                    Скасувати
                </a>
                <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition">
                    Додати роботу
                </button>
            </div>
        </form>
    </div>
</div>

<div id="imagePreview" class="mt-6 hidden">
    <h3 class="text-lg font-semibold mb-3">Попередній перегляд:</h3>
    <div class="grid grid-cols-4 gap-4" id="previewContainer"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Preview images
        document.getElementById('MainImageFile')?.addEventListener('change', function(e) {
            previewImages(e.target.files, 'main');
        });

        document.getElementById('AdditionalImageFiles')?.addEventListener('change', function(e) {
            previewImages(e.target.files, 'additional');
        });

        function previewImages(files, type) {
            const preview = document.getElementById('imagePreview');
            const container = document.getElementById('previewContainer');

            if (type === 'main') {
                container.innerHTML = '';
            }

            if (files.length > 0) {
                preview.classList.remove('hidden');

                Array.from(files).forEach(file => {
                    if (file.type.startsWith('image/')) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            const div = document.createElement('div');
                            div.className = 'relative';
                            div.innerHTML = `
                                <img src="${e.target.result}" class="w-full h-32 object-cover rounded-lg">
                                <span class="absolute top-1 right-1 bg-black bg-opacity-50 text-white text-xs px-2 py-1 rounded">
                                    ${type === 'main' ? 'Головне' : 'Додаткове'}
                                </span>
                            `;
                            container.appendChild(div);
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }
        }
    </script>
}