@model List<RoadWorksPro.Models.Entities.PortfolioItem>
@{
    ViewData["Title"] = "Управління портфоліо";
    Layout = "_AdminLayout";
}

@if (TempData["Success"] != null)
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
        <span class="block sm:inline">@TempData["Success"]</span>
    </div>
}

<div class="mb-6 flex justify-between items-center">
    <div>
        <h2 class="text-2xl font-bold text-gray-900">Портфоліо</h2>
        <p class="text-gray-600">Всього робіт: @Model.Count</p>
    </div>
    <a href="/Admin/Portfolio/Create" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-lg transition">
        + Додати роботу
    </a>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Фото</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Назва</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Категорія</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Локація</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Дата</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Статус</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Дії</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <img src="@item.MainImagePath" alt="@item.Title" class="h-12 w-12 object-cover rounded">
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm font-medium text-gray-900">@item.Title</div>
                            @if (item.IsFeatured)
                            {
                                <span class="text-xs text-yellow-600">⭐ Рекомендована</span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            @switch (item.Category)
                            {
                                case "road-marking":
                                    <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-xs">Розмітка</span>
                                    break;
                                case "asphalt":
                                    <span class="px-2 py-1 bg-gray-100 text-gray-800 rounded-full text-xs">Асфальт</span>
                                    break;
                                case "signs":
                                    <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">Знаки</span>
                                    break;
                                default:
                                    <span class="px-2 py-1 bg-purple-100 text-purple-800 rounded-full text-xs">Інше</span>
                                    break;
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @item.Location
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @item.CompletedDate.ToString("MM/yyyy")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            @if (item.IsActive)
                            {
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                    Активна
                                </span>
                            }
                            else
                            {
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                    Неактивна
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <a href="/Admin/Portfolio/Edit/@item.Id" class="text-blue-600 hover:text-blue-900 mr-3">
                                Редагувати
                            </a>
                            <a href="/Admin/Portfolio/Delete/@item.Id" class="text-red-600 hover:text-red-900">
                                Видалити
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-12">
            <p class="text-gray-500">Немає робіт в портфоліо</p>
        </div>
    }
</div>