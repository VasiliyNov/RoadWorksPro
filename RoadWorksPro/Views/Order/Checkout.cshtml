@model RoadWorksPro.Models.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Оформлення замовлення";
}

<div class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Оформлення замовлення</h1>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            @* Order Form *@
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-xl font-semibold mb-6">Контактна інформація</h2>

                    <form asp-action="Checkout" method="post">
                        @Html.AntiForgeryToken()

                        <div class="space-y-4">
                            @* Name *@
                            <div>
                                <label asp-for="CustomerName" class="block text-sm font-medium text-gray-700 mb-1">
                                    Ім'я <span class="text-red-500">*</span>
                                </label>
                                <input asp-for="CustomerName"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                                       placeholder="Ваше ім'я">
                                <span asp-validation-for="CustomerName" class="text-red-500 text-sm"></span>
                            </div>

                            @* Phone *@
                            <div>
                                <label asp-for="CustomerPhone" class="block text-sm font-medium text-gray-700 mb-1">
                                    Телефон <span class="text-red-500">*</span>
                                </label>
                                <input asp-for="CustomerPhone"
                                       type="tel"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                                       placeholder="+380 XX XXX XX XX">
                                <span asp-validation-for="CustomerPhone" class="text-red-500 text-sm"></span>
                            </div>

                            @* Email *@
                            <div>
                                <label asp-for="CustomerEmail" class="block text-sm font-medium text-gray-700 mb-1">
                                    Email
                                </label>
                                <input asp-for="CustomerEmail"
                                       type="email"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                                       placeholder="your@email.com">
                                <span asp-validation-for="CustomerEmail" class="text-red-500 text-sm"></span>
                            </div>

                            @* Comment *@
                            <div>
                                <label asp-for="Comment" class="block text-sm font-medium text-gray-700 mb-1">
                                    Коментар до замовлення
                                </label>
                                <textarea asp-for="Comment"
                                          rows="4"
                                          class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                                          placeholder="Додаткова інформація..."></textarea>
                                <span asp-validation-for="Comment" class="text-red-500 text-sm"></span>
                            </div>
                        </div>

                        <div class="mt-6 flex justify-between items-center">
                            <a href="/Cart" class="text-blue-600 hover:text-blue-800 font-medium transition">
                                ← Повернутися до кошика
                            </a>
                            <button type="submit"
                                    class="bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-8 rounded-lg transition transform hover:scale-105">
                                Підтвердити замовлення
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            @* Order Summary *@
            <div class="lg:col-span-1">
                <div class="bg-white rounded-lg shadow p-6 sticky top-20">
                    <h2 class="text-xl font-semibold mb-4">Ваше замовлення</h2>

                    <div class="space-y-3 mb-4">
                        @foreach (var item in Model.Cart.Items)
                        {
                            <div class="flex justify-between text-sm">
                                <div>
                                    <p class="font-medium">@item.ProductName</p>
                                    <p class="text-gray-500">@item.Quantity x ₴ @item.Price.ToString("N2")</p>
                                </div>
                                <span class="font-medium">₴ @item.Subtotal.ToString("N2")</span>
                            </div>
                        }
                    </div>

                    <div class="border-t pt-4">
                        <div class="flex justify-between text-lg font-bold">
                            <span>Всього:</span>
                            <span class="text-blue-700">₴ @Model.Cart.Total.ToString("N2")</span>
                        </div>
                    </div>

                    <div class="mt-6 p-4 bg-blue-50 rounded-lg">
                        <p class="text-sm text-blue-800">
                            <svg class="inline w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            Після оформлення замовлення наш менеджер зв'яжеться з вами для уточнення деталей
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}