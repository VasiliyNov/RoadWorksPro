@model ErrorViewModel
@{
    ViewData["Title"] = "Помилка";
}

<div class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h1 class="text-6xl font-bold text-red-600 mb-4">Упс!</h1>
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">Виникла помилка</h2>
            <p class="text-gray-600 mb-8">
                Вибачте, щось пішло не так. Будь ласка, спробуйте пізніше.
            </p>

            @if (Model?.ShowRequestId ?? false)
            {
                <p class="text-sm text-gray-500 mb-4">
                    <strong>Request ID:</strong> <code>@Model?.RequestId</code>
                </p>
            }

            <a href="/" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition">
                Повернутися на головну
            </a>
        </div>
    </div>
</div>