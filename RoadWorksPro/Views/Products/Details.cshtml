@model RoadWorksPro.Models.Entities.RoadProduct
@{
    ViewData["Title"] = Model.Name;
    var relatedProducts = ViewBag.RelatedProducts as List<RoadWorksPro.Models.Entities.RoadProduct>;
}

<div class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        @* Breadcrumb *@
        <nav class="mb-8">
            <ol class="flex items-center space-x-2 text-sm">
                <li><a href="/" class="text-gray-500 hover:text-blue-700">Головна</a></li>
                <li><span class="text-gray-400">/</span></li>
                <li><a href="/Products" class="text-gray-500 hover:text-blue-700">Каталог</a></li>
                <li><span class="text-gray-400">/</span></li>
                <li class="text-gray-900 font-medium">@Model.Name</li>
            </ol>
        </nav>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            @* Product Image *@
            <div>
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath"
                         alt="@Model.Name"
                         class="w-full h-auto rounded-lg shadow-lg">
                }
                else
                {
                    <div class="w-full h-96 bg-gray-200 rounded-lg flex items-center justify-center">
                        <svg class="h-32 w-32 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                    </div>
                }
            </div>

            @* Product Info *@
            <div>
                <h1 class="text-3xl font-bold text-gray-900 mb-4">@Model.Name</h1>

                <div class="text-3xl font-bold text-blue-700 mb-6">
                    ₴ @Model.Price.ToString("N2")
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold mb-2">Опис</h2>
                        <p class="text-gray-600">@Model.Description</p>
                    </div>
                }

                @* Specifications *@
                <div class="mb-6">
                    <h2 class="text-lg font-semibold mb-3">Характеристики</h2>
                    <dl class="space-y-2">
                        @if (!string.IsNullOrEmpty(Model.Dimensions))
                        {
                            <div class="flex justify-between py-2 border-b">
                                <dt class="text-gray-500">Розміри:</dt>
                                <dd class="font-medium">@Model.Dimensions</dd>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Material))
                        {
                            <div class="flex justify-between py-2 border-b">
                                <dt class="text-gray-500">Матеріал:</dt>
                                <dd class="font-medium">@Model.Material</dd>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Standard))
                        {
                            <div class="flex justify-between py-2 border-b">
                                <dt class="text-gray-500">Стандарт:</dt>
                                <dd class="font-medium">@Model.Standard</dd>
                            </div>
                        }
                    </dl>
                </div>

                @* Add to Cart *@
                <div class="flex items-center gap-4 mb-8">
                    <button class="add-to-cart-detail bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-8 rounded-lg transition transform hover:scale-105 flex items-center"
                            data-product-id="@Model.Id"
                            data-product-name="@Model.Name"
                            data-product-price="@Model.Price">
                        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        Додати в кошик
                    </button>
                    <a href="/Products" class="text-blue-600 hover:text-blue-800 font-medium">
                        Продовжити покупки
                    </a>
                </div>

                @* Benefits *@
                <div class="bg-gray-50 rounded-lg p-6">
                    <div class="space-y-3">
                        <div class="flex items-center">
                            <svg class="h-5 w-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span>Гарантія якості</span>
                        </div>
                        <div class="flex items-center">
                            <svg class="h-5 w-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span>Сертифікована продукція</span>
                        </div>
                        <div class="flex items-center">
                            <svg class="h-5 w-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span>Швидка доставка</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* Related Products *@
        @if (relatedProducts != null && relatedProducts.Any())
        {
            <div class="mt-16">
                <h2 class="text-2xl font-bold text-gray-900 mb-8">Вас також може зацікавити</h2>
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                    @foreach (var product in relatedProducts)
                    {
                        <div class="bg-white border rounded-lg overflow-hidden hover:shadow-xl transition-shadow">
                            <a href="/Products/Details/@product.Id">
                                <div class="h-48 bg-gray-100 flex items-center justify-center">
                                    @if (!string.IsNullOrEmpty(product.ImagePath))
                                    {
                                        <img src="@product.ImagePath" alt="@product.Name" class="h-full w-full object-cover">
                                    }
                                    else
                                    {
                                        <svg class="h-20 w-20 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                    }
                                </div>
                            </a>
                            <div class="p-4">
                                <h4 class="font-semibold mb-2">
                                    <a href="/Products/Details/@product.Id" class="hover:text-blue-600">@product.Name</a>
                                </h4>
                                <div class="flex justify-between items-center">
                                    <span class="text-xl font-bold text-blue-700">₴ @product.Price.ToString("N0")</span>
                                    <button class="add-to-cart-related bg-orange-500 hover:bg-orange-600 text-white px-3 py-1 rounded transition"
                                            data-product-id="@product.Id"
                                            data-product-name="@product.Name"
                                            data-product-price="@product.Price">
                                        В кошик
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@* Notification *@
<div class="fixed bottom-4 right-4 bg-white rounded-lg shadow-xl p-4 hidden" id="cartNotification">
    <div class="flex items-center space-x-3">
        <svg class="h-6 w-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <span class="text-gray-700">Товар додано!</span>
    </div>
</div>

@section Scripts {
    <script>
        // Add to cart for detail page
        document.querySelector('.add-to-cart-detail')?.addEventListener('click', async function(e) {
            e.preventDefault();

            const productId = this.dataset.productId;
            const originalHtml = this.innerHTML;

            this.disabled = true;
            this.innerHTML = '<span>Додаємо...</span>';

            try {
                const response = await fetch(`/Products/AddToCart/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });

                const data = await response.json();

                if (data.success) {
                    window.updateCartDisplay(data.cartCount);

                    // Show notification
                    const notification = document.getElementById('cartNotification');
                    notification.classList.remove('hidden');
                    setTimeout(() => {
                        notification.classList.add('hidden');
                    }, 3000);

                    this.innerHTML = '✓ Додано!';
                    setTimeout(() => {
                        this.innerHTML = originalHtml;
                        this.disabled = false;
                    }, 1500);
                }
            } catch (error) {
                console.error('Error:', error);
                this.innerHTML = originalHtml;
                this.disabled = false;
            }
        });

        // Add to cart for related products
        document.querySelectorAll('.add-to-cart-related').forEach(button => {
            button.addEventListener('click', async function(e) {
                e.preventDefault();

                const productId = this.dataset.productId;
                const originalText = this.textContent;

                this.disabled = true;
                this.textContent = 'Додаємо...';

                try {
                    const response = await fetch(`/Products/AddToCart/${productId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        }
                    });

                    const data = await response.json();

                    if (data.success) {
                        // Update cart counter
                        window.updateCartDisplay(data.cartCount);

                        // Show notification
                        const notification = document.getElementById('cartNotification');
                        if (notification) {
                            notification.classList.remove('hidden');
                            setTimeout(() => {
                                notification.classList.add('hidden');
                            }, 3000);
                        }

                        // Change button to success state
                        this.className = 'bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded transition';
                        this.textContent = '✓ Додано!';

                        // Reset after delay
                        setTimeout(() => {
                            this.className = 'add-to-cart-related bg-orange-500 hover:bg-orange-600 text-white px-3 py-1 rounded transition';
                            this.textContent = originalText;
                            this.disabled = false;
                        }, 2000);
                    } else {
                        throw new Error('Failed to add to cart');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    this.textContent = 'Помилка';

                    setTimeout(() => {
                        this.textContent = originalText;
                        this.disabled = false;
                    }, 2000);
                }
            });
        });
    </script>
}