@model RoadWorksPro.Models.Entities.RoadService
@{
    ViewData["Title"] = Model.Name;
    var otherServices = ViewBag.OtherServices as List<RoadWorksPro.Models.Entities.RoadService>;
}

<div class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        @* Breadcrumb *@
        <nav class="mb-8">
            <ol class="flex items-center space-x-2 text-sm">
                <li><a href="/" class="text-gray-500 hover:text-blue-700">Головна</a></li>
                <li><span class="text-gray-400">/</span></li>
                <li><a href="/Services" class="text-gray-500 hover:text-blue-700">Послуги</a></li>
                <li><span class="text-gray-400">/</span></li>
                <li class="text-gray-900 font-medium">@Model.Name</li>
            </ol>
        </nav>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            @* Main Content *@
            <div class="lg:col-span-2">
                <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">@Model.Name</h1>

                @* Service Image *@
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath"
                         alt="@Model.Name"
                         class="w-full h-auto rounded-lg shadow-lg mb-8">
                }
                else
                {
                    <div class="w-full h-96 bg-gradient-to-br from-blue-500 to-blue-700 rounded-lg flex items-center justify-center mb-8">
                        <svg class="h-32 w-32 text-white opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                        </svg>
                    </div>
                }

                @* Price Info *@
                @if (!string.IsNullOrEmpty(Model.PriceInfo))
                {
                    <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-6">
                        <p class="text-lg font-semibold text-blue-900">
                            Вартість: @Model.PriceInfo
                        </p>
                    </div>
                }

                @* Description *@
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="prose max-w-none mb-8">
                        <h2 class="text-2xl font-semibold mb-4">Детальний опис</h2>
                        <p class="text-gray-600 whitespace-pre-line">@Model.Description</p>
                    </div>
                }

                @* Service Features *@
                <div class="bg-gray-50 rounded-lg p-6 mb-8">
                    <h3 class="text-xl font-semibold mb-4">Що включає послуга:</h3>
                    <ul class="space-y-3">
                        <li class="flex items-start">
                            <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span>Професійна консультація та оцінка обсягу робіт</span>
                        </li>
                        <li class="flex items-start">
                            <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span>Використання сертифікованих матеріалів</span>
                        </li>
                        <li class="flex items-start">
                            <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span>Гарантія на виконані роботи</span>
                        </li>
                        <li class="flex items-start">
                            <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span>Дотримання всіх норм та стандартів</span>
                        </li>
                    </ul>
                </div>

                @* CTA *@
                <div class="bg-gradient-to-r from-blue-600 to-blue-800 rounded-lg p-8 text-white">
                    <h3 class="text-2xl font-bold mb-4">Замовити @Model.Name</h3>
                    <p class="mb-6">Зв'яжіться з нами для отримання детальної консультації та розрахунку вартості</p>
                    <div class="flex flex-col sm:flex-row gap-4">
                        <a href="tel:+380501234567" class="bg-white text-blue-700 hover:bg-gray-100 font-bold py-3 px-6 rounded-lg text-center transition">
                            📞 Подзвонити
                        </a>
                        <button onclick="showServiceForm()" class="bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-6 rounded-lg transition">
                            📝 Залишити заявку
                        </button>
                    </div>
                </div>
            </div>

            @* Sidebar *@
            <div class="lg:col-span-1">
                @* Other Services *@
                @if (otherServices != null && otherServices.Any())
                {
                    <div class="bg-white rounded-lg shadow p-6 mb-6 sticky top-20">
                        <h3 class="text-xl font-semibold mb-4">Інші послуги</h3>
                        <div class="space-y-3">
                            @foreach (var service in otherServices)
                            {
                                <a href="/Services/Details/@service.Id"
                                   class="block p-3 bg-gray-50 rounded hover:bg-gray-100 transition">
                                    <h4 class="font-medium text-gray-900 mb-1">@service.Name</h4>
                                    @if (!string.IsNullOrEmpty(service.PriceInfo))
                                    {
                                        <p class="text-sm text-blue-600">@service.PriceInfo</p>
                                    }
                                </a>
                            }
                        </div>
                    </div>
                }

                @* Contact Info *@
                <div id="contacts-sidebar" class="bg-blue-50 rounded-lg p-6">
                    <h3 class="text-lg font-semibold mb-4">Контакти</h3>
                    <div class="space-y-3 text-sm">
                        <div class="flex items-center">
                            <svg class="h-5 w-5 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                            </svg>
                            <span>+380 (96) 630-16-17</span>
                        </div>
                        <div class="flex items-center">
                            <svg class="h-5 w-5 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                            <span>LineUpInfo@rozmitka.com</span>
                        </div>
                        <div class="flex items-center">
                            <svg class="h-5 w-5 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <span>Пн-Сб: 9:00 - 19:00</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Service Request Modal *@
<div id="serviceModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg max-w-md w-full p-6">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-xl font-bold">Замовити послугу</h3>
            <button onclick="closeServiceForm()" class="text-gray-500 hover:text-gray-700">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <form id="modalServiceForm">
            @Html.AntiForgeryToken()
            <input type="hidden" name="service" value="@Model.Name">

            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Ім'я *</label>
                    <input type="text" name="name" required class="w-full px-3 py-2 border border-gray-300 rounded-lg">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Телефон *</label>
                    <input type="tel" name="phone" required class="w-full px-3 py-2 border border-gray-300 rounded-lg">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Повідомлення</label>
                    <textarea name="message" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg"></textarea>
                </div>
            </div>

            <button type="submit" class="w-full mt-6 bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 rounded-lg transition">
                Відправити заявку
            </button>
        </form>

        <div id="modalMessage" class="mt-4 hidden">
            <div class="p-3 rounded-lg">
                <p class="text-sm"></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showServiceForm() {
            document.getElementById('serviceModal').classList.remove('hidden');
        }

        function closeServiceForm() {
            document.getElementById('serviceModal').classList.add('hidden');
        }

        document.getElementById('modalServiceForm')?.addEventListener('submit', async function(e) {
            e.preventDefault();

            const submitButton = this.querySelector('button[type="submit"]');
            const originalText = submitButton.textContent;
            const messageDiv = document.getElementById('modalMessage');
            const messagePara = messageDiv.querySelector('p');

            submitButton.disabled = true;
            submitButton.textContent = 'Відправляємо...';

            try {
                const formData = new FormData(this);
                const response = await fetch('/Contact/ServiceRequest', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                messageDiv.classList.remove('hidden');
                messagePara.textContent = result.message;

                if (result.success) {
                    messageDiv.querySelector('div').className = 'p-3 rounded-lg bg-green-100 text-green-800';
                    this.reset();
                    setTimeout(() => {
                        closeServiceForm();
                        messageDiv.classList.add('hidden');
                    }, 3000);
                } else {
                    messageDiv.querySelector('div').className = 'p-3 rounded-lg bg-red-100 text-red-800';
                }
            } catch (error) {
                console.error('Error:', error);
                messageDiv.classList.remove('hidden');
                messageDiv.querySelector('div').className = 'p-3 rounded-lg bg-red-100 text-red-800';
                messagePara.textContent = 'Помилка відправки';
            } finally {
                submitButton.disabled = false;
                submitButton.textContent = originalText;
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            const otherServices = document.querySelector('.sticky.top-20');
            const contacts = document.getElementById('contacts-sidebar');

            if (otherServices && contacts) {
                function updateContactsPosition() {
                    const otherServicesHeight = otherServices.offsetHeight;
                    const topValue = 80 + otherServicesHeight + 24; // 80px = top-20 в tailwind

                    contacts.classList.add('sticky');
                    contacts.style.top = topValue + 'px';
                    contacts.style.zIndex = '5';
                }

                updateContactsPosition();
                window.addEventListener('resize', updateContactsPosition);
            }
        });

    </script>
}